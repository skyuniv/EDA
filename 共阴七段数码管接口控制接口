#高电平有效驱动输出驱动一个共阴极LED显示器   
LIBRARY IEEE;
USE IEEE.STD_LOGIC_1164.ALL;
USE IEEE.STD_LOGIC_UNSIGNED.ALL;    

ENTITY ssd IS       
PORT(
CLEAR, :IN STD_LOGIC;    
DIN: IN STD_LOGIC_VECTOR(5 DOWNTO 0);    
DOUT_1 : OUT STD_LOGIC_VECTOR(6 DOWNTO 0);   
DOUT_2 : OUT STD_LOGIC_VECTOR(6 DOWNTO 0)    
);
END ssd;

ARCHITECTURE one OF ssd IS

VARIABLE ten ,buten: UNSIGNED

PROCESS()
BEGIN
    IF CLEAR = '1' THEN
	     FOR i IN O TO 59 LOOP
		      WAIT ON DIN;
